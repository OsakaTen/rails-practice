<div class="flex justify-center items-center mt-20">
  <div class="w-full max-w-sm bg-white p-8 rounded-md border">
    <h4 class="text-2xl font-bold text-center mb-6">ログイン（社内推進チーム）</h4>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|%>

      <div class="mb-4">
        <%= f.label :email, "メールアドレス"%>
        <%= f.email_field :email, autofocus: true,
        class: " w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, "パスワード", class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password",class: " w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"%>
      </div>

      <div class="d-grid">
        <%= f.submit "ログイン",class: "w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600 transition mt-5" %>
      </div>
    <% end %>

    <div class="mt-3 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">イベントを編集</h1>

    <%= form_with model: @event, class: "space-y-6" do |f| %>
      <!-- タイトル -->
      <div>
        <%= f.label :title, "タイトル", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <% if @event.errors.full_messages_for(:title).any? %>
          <ul class="mt-2 text-sm text-red-600">
            <% @event.errors.full_messages_for(:title).each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <!-- 開催日 -->
      <div>
        <%= f.label :event_date, "開催日", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.date_field :event_date, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <% if @event.errors.full_messages_for(:event_date).any? %>
          <ul class="mt-2 text-sm text-red-600">
            <% @event.errors.full_messages_for(:event_date).each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <!-- 主催者名 -->
      <div>
        <%= f.label :organizer_name, "主催者", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :organizer_name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <% if @event.errors.full_messages_for(:organizer_name).any? %>
          <ul class="mt-2 text-sm text-red-600">
            <% @event.errors.full_messages_for(:organizer_name).each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <!-- 対象部署 -->
      <div>
        <%= f.label :target_departments, "対象部署", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :target_departments, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <% if @event.errors.full_messages_for(:target_departments).any? %>
          <ul class="mt-2 text-sm text-red-600">
            <% @event.errors.full_messages_for(:target_departments).each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <!-- イベント詳細 -->
      <div>
        <%= f.label :description, "イベント詳細", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_area :description, rows: 6, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <% if @event.errors.full_messages_for(:description).any? %>
          <ul class="mt-2 text-sm text-red-600">
            <% @event.errors.full_messages_for(:description).each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <!-- ボタン -->
      <div class="flex justify-end gap-3 pt-4">
        <%= link_to "キャンセル", event_path(@event), class: "px-4 py-2 text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50" %>
        <%= f.submit "更新", class: "px-4 py-2 text-white bg-blue-600 rounded-md hover:bg-blue-700 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
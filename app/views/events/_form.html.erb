<!-- app/views/events/_form.html.erb -->
<%= form_with model: event, local: true, class: "row g-3" do |form| %>
  <!-- エラーメッセージの表示 -->
  <% if event.errors.any? %>
    <div class="col-12">
      <div class="alert alert-danger">
        <h6>エラーが発生しました：</h6>
        <ul class="mb-0">
          <% event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <!-- タイトル入力 -->
  <div class="col-12">
    <%= form.label :title, "タイトル", class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <!-- 説明入力 -->
  <div class="col-12">
    <%= form.label :description, "説明", class: "form-label" %>
    <%= form.text_area :description, rows: 4, class: "form-control" %>
  </div>

  <!-- 開催日時入力 -->
  <div class="col-md-6">
    <%= form.label :event_date, "開催日時", class: "form-label" %>
    <%= form.datetime_local_field :event_date, class: "form-control" %>
  </div>

  <!-- 主催者名入力 -->
  <div class="col-md-6">
    <%= form.label :organizer_name, "主催者名", class: "form-label" %>
    <%= form.text_field :organizer_name, class: "form-control" %>
  </div>

  <!-- 対象部署入力 -->
  <div class="col-12">
    <%= form.label :target_departments, "対象部署", class: "form-label" %>
    <%= form.text_field :target_departments, 
                        placeholder: "例：全社（特に開発・営業）", 
                        class: "form-control" %>
  </div>

  <!-- 送信ボタン -->
  <div class="col-12">
    <%= form.submit class: "btn btn-primary me-2" %>
    <%= link_to "キャンセル", events_path, class: "btn btn-secondary" %>
  </div>
<% end %>
<%= form_with(model: event, local: true, class: "row g-3") do |form| %>
  <% if event.errors.any? %>
    <div class="col-12">
      <div class="alert alert-danger">
        <h4><%= pluralize(event.errors.count, "error") %> でイベントの保存ができませんでした:</h4>
        <ul class="mb-0">
          <% event.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="col-12">
    <%= form.label :title, "イベントタイトル", class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="col-12">
    <%= form.label :description, "イベント説明", class: "form-label" %>
    <%= form.text_area :description, rows: 4, class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= form.label :event_date, "開催日時", class: "form-label" %>
    <%= form.datetime_local_field :event_date, class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= form.label :organizer_name, "主催者名", class: "form-label" %>
    <%= form.text_field :organizer_name, class: "form-control",
        value: form.object.organizer_name || current_user.full_name %>
  </div>

  <div class="col-12">
    <%= form.label :target_departments, "対象部署", class: "form-label" %>
    <%= form.text_field :target_departments, class: "form-control",
        placeholder: "例：全社、開発部・営業部、企画部" %>
  </div>

  <div class="col-12">
    <%= form.submit "保存", class: "btn btn-primary" %>
  </div>
<% end %>
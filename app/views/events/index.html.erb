<!-- app/views/events/index.html.erb -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>イベント一覧</h1>
  <%= link_to "新規イベント作成", new_event_path, class: "btn btn-primary" %>
</div>

<% if @events.any? %>
  <!-- イベントが存在する場合 -->
  <div class="row">
    <% @events.each do |event| %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= event.title %></h5>
            <p class="card-text"><%= truncate(event.description, length: 100) %></p>
            <p class="text-muted">
              <i class="fas fa-calendar"></i> <%= event.event_date.strftime("%Y年%m月%d日 %H:%M") %><br>
              <i class="fas fa-user"></i> <%= event.organizer_name %><br>
              <i class="fas fa-building"></i> <%= event.target_departments %>
            </p>
          </div>
          <div class="card-footer">
            <!-- 管理用ボタン -->
            <%= link_to "詳細", event_path(event), class: "btn btn-outline-primary btn-sm" %>
            <%= link_to "編集", edit_event_path(event), class: "btn btn-outline-secondary btn-sm" %>
            <%= link_to "削除", event_path(event), method: :delete,
                        confirm: "本当に削除しますか？", class: "btn btn-outline-danger btn-sm" %>

            <!-- 公開URL -->
            <div class="mt-2">
              <small class="text-muted">公開URL:</small><br>
              <input type="text" class="form-control form-control-sm"
                    value="<%= public_event_url(event.public_token) %>" readonly
                    onclick="this.select()">
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <!-- イベントが存在しない場合 -->
  <div class="alert alert-info">
    まだイベントが登録されていません。
    <%= link_to "最初のイベントを作成", new_event_path, class: "alert-link" %>してください。
  </div>
<% end %>
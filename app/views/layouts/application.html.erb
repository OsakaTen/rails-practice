<!DOCTYPE html>
<html>
  <head>
    <title>MyApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application.tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if notice %>
      <p class="text-green-600 text-center mt-4"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="text-red-600 text-center mt-4"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>

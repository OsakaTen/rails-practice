<!-- app/views/public_events/show.html.erb -->
<div class="row justify-content-center">
  <div class="col-lg-8">
    <div class="card">
      <div class="card-header bg-primary text-white">
        <h2 class="mb-0"><%= @event.title %></h2>
      </div>
      <div class="card-body">
        <!-- 開催日時 -->
        <div class="row mb-3">
          <div class="col-sm-3"><strong>開催日時：</strong></div>
          <div class="col-sm-9">
            <i class="fas fa-calendar text-primary"></i>
            <%= @event.event_date.strftime("%Y年%m月%d日（%a） %H:%M") %>
          </div>
        </div>

        <!-- 主催者 -->
        <div class="row mb-3">
          <div class="col-sm-3"><strong>主催者：</strong></div>
          <div class="col-sm-9">
            <i class="fas fa-user text-primary"></i>
            <%= @event.organizer_name %>
          </div>
        </div>

        <!-- 対象部署 -->
        <div class="row mb-4">
          <div class="col-sm-3"><strong>対象部署：</strong></div>
          <div class="col-sm-9">
            <i class="fas fa-building text-primary"></i>
            <%= @event.target_departments %>
          </div>
        </div>

        <!-- イベント詳細 -->
        <div class="mb-3">
          <h5>イベント詳細</h5>
          <div class="border p-3 rounded bg-light">
            <%= simple_format(@event.description) %>
          </div>
        </div>
      </div>
      <div class="card-footer text-muted">
        <small>最終更新：<%= @event.updated_at.strftime("%Y年%m月%d日 %H:%M") %></small>
      </div>
    </div>
  </div>
</div>